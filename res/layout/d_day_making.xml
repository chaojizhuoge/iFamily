<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/all"
    android:orientation="vertical" >
   <RelativeLayout
       android:id="@+id/ll"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       >
       <LinearLayout 
           android:id="@+id/ll_se"
           android:layout_alignParentBottom="true"
           android:background="#ffffff"
           android:layout_width="fill_parent"
           android:layout_height="45dp"
           android:paddingTop="3dp"
           android:paddingBottom="3dp"
           >

       <TextView
            android:id="@+id/addtext"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
           android:background="@drawable/commenbutton"  
            android:button="@null"
            android:gravity="center"
            android:textColor="@color/purple"
            android:text="添加文字" />

        <TextView
            android:id="@+id/addvoice"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/commenbutton"  
            android:button="@null"
            android:gravity="center"
             android:textColor="@color/purple"
            android:text="添加声音" />

         <TextView
     android:id="@+id/addbg"
      android:gravity="center"
     android:layout_height="fill_parent"
     android:layout_width="wrap_content"
     android:layout_weight="1"
     android:layout_marginLeft="10dp"
     android:text="更改背景"
      android:textColor="@color/purple"
      android:background="@drawable/commenbutton"  
     android:button="@null"
            />
         <TextView
     android:id="@+id/back"
      android:gravity="center"
     android:layout_height="fill_parent"
     android:layout_width="wrap_content"
     android:layout_weight="1"
     android:layout_marginLeft="10dp"
     android:text="保存编辑"
      android:textColor="@color/purple"
     android:background="@drawable/commenbutton"  
     android:layout_marginRight="10dp"
     android:button="@null"
            /> 
       </LinearLayout>
       <TextView 
           android:id="@+id/line"
           android:layout_width="fill_parent"
           android:layout_height="1px"
           android:background="#000000"
           android:layout_above="@id/ll_se"
           />
              <LinearLayout 
           android:orientation="horizontal"
           android:layout_above="@id/line"
           android:background="#ffffff"
           android:layout_width="fill_parent"
           android:layout_height="45dp"
           android:paddingBottom="3dp"
           android:paddingTop="3dp"
           android:visibility="gone"
           android:id="@+id/selectview"
           >
        <!-- 字体的部分 -->
        <LinearLayout
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:visibility="gone"

            android:id="@+id/wenzi"
>
        <TextView
            android:id="@+id/ziti"
            android:gravity="center"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:text="字体"           
            android:background="@drawable/commenbutton"  
           android:textColor="@color/purple"
                        />
                <TextView
            android:id="@+id/daxiao"
            android:gravity="center"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:text="大小"
             android:textColor="@color/purple"
            android:background="@drawable/commenbutton"           
                        />
                        <TextView
            android:id="@+id/yanse"
            android:gravity="center"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:text="颜色"
             android:textColor="@color/purple"
            android:background="@drawable/commenbutton"          
                        />
                        <TextView
            android:id="@+id/fangxiang"
            android:gravity="center"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:text="方向"
             android:textColor="@color/purple"
            android:background="@drawable/commenbutton"          
                        />
                        </LinearLayout>
          <!-- 声音的部分 -->      
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/shengyin"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/play"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dip"
                        android:src="@drawable/chatting_setmode_msg_btn" 
                        android:visibility="gone"    
                        />

                     <TextView
            android:id="@+id/rekaishi"
            android:gravity="center"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="重新录音"
             android:textColor="@color/purple"
            android:background="@drawable/commenbutton" 
            android:visibility="gone"            
                        />
                    <TextView
            android:id="@+id/kaishi"
            android:gravity="center"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="点击开始录音"
             android:textColor="@color/purple"
            android:background="@drawable/commenbutton"           
                        />
                    <TextView
            android:id="@+id/tingzhi"
            android:gravity="center"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="点击停止录音"
             android:textColor="@color/purple"
            android:background="@drawable/commenbutton"    
            android:visibility="gone"       
                        />
                </LinearLayout>                     
        </LinearLayout>

<LinearLayout
         android:layout_width="fill_parent"
          android:layout_height="fill_parent" 
          android:layout_marginBottom="90dp"
          android:gravity="center"
          android:id="@+id/rrll"
>
   <com.example.ifamily.mywidget.Moveable
          android:id="@+id/mycard"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:scaleType="centerCrop"
          android:background="@drawable/bottom"
          />
            
      </LinearLayout>        
              
              
</RelativeLayout> 
</LinearLayout>
