<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:id="@+id/all"
  android:layout_height="match_parent"
  android:orientation="horizontal"
  >
<RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:background="@drawable/cornerview"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent" 
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:id="@+id/ll1"
        >

<com.example.ifamily.mywidget.RoundImageView
    android:id="@+id/gi_friendimg"
    android:layout_width="45dp"
    android:layout_height="45dp"
    android:layout_marginLeft="10dp"
    android:src="@drawable/defalt_head" />

</LinearLayout>
    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent" 
        android:layout_toRightOf="@id/ll1"
        >
    <TextView 
        android:id="@+id/tv_p_setgroup_names"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:text="jfiejfiefij"
        android:gravity="center"
        />
    </LinearLayout>
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent" 
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_marginRight="20dp"
        >
   <CheckBox
            android:id="@+id/cb_che"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/checkbox_bg"
            android:button="@null"
            android:checked="false"
            android:layout_gravity="center"
            android:focusableInTouchMode="false"     
            android:layout_marginLeft="40dp"
            android:paddingTop="2dp"
            android:focusable="false"
           />
   </LinearLayout>
   </RelativeLayout>
  </LinearLayout>