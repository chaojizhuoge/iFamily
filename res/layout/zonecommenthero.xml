<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/all"
    android:orientation="vertical" >
    
<RelativeLayout
         android:id="@+id/rel"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         
          >
  <RelativeLayout 
            android:layout_height="wrap_content"
             android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:id="@+id/ll">
<com.example.ifamily.mywidget.RoundImageView
    android:id="@+id/head"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
/>
        <com.example.ifamily.mywidget.TextViewM
            android:layout_toRightOf="@id/head"
            android:layout_marginTop="10dp"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="left"
            android:text="dfdfdfdfdfd"
            android:singleLine="true"
            
            android:layout_marginLeft="10dp"
            />   
       <TextView 
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="left"
            android:text="dfdfdfdfdfd"
    android:textColor="@color/purple"
            android:layout_alignParentRight ="true"
            android:singleLine="true"
            android:layout_marginLeft="10dp"
            />    
      </RelativeLayout >   

      <ImageView
          android:id="@+id/hisimg"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:maxWidth="200dp"
          android:maxHeight="200dp"
          android:adjustViewBounds="true"  
          android:layout_below="@id/ll"
          android:layout_marginLeft="50dp"
          android:layout_marginRight="10dp"
          android:layout_marginTop="5dp"/>

<TextView 
    android:id="@+id/content"
    android:layout_below="@id/hisimg"
    android:layout_marginLeft="50dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="10dp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:textSize="20dp"
    android:text="我哦喔喔窝窝窝窝窝窝窝窝窝喔我喔噢喔喔窝窝窝窝窝窝窝窝窝"
    android:textColor="#000000"
    /> 
    <RelativeLayout 
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:id="@+id/r_re"
        android:layout_below="@id/content"
        >
<LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
>
  <LinearLayout
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_marginRight="20dp"
      android:orientation="horizontal"
      >
      <TextView
                    android:id="@+id/num"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="12个赞"
                    android:textColor="#000000"
                    android:layout_marginRight="10dp"
                    />
                       
                <ImageView
                    android:id="@+id/zan"
                    
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="@drawable/likeselect"
                    android:contentDescription="@string/app_name"
                    android:focusable="true" />
</LinearLayout> 
 <LinearLayout
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_marginRight="10dp"
      android:layout_marginLeft="10dp"
      android:orientation="horizontal"
    >
                <TextView
                    android:id="@+id/comnum"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="12条评论"
                    android:textColor="#000000"
                    android:layout_marginRight="10dp"
                    />
                 <ImageView
                     android:id="@+id/com"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:layout_toRightOf="@id/comnum"
                     android:layout_marginBottom="1dp"
                     android:background="@drawable/commentselect"
                     
                     android:contentDescription="@string/app_name"
                     android:focusable="true" />
</LinearLayout>
           </LinearLayout>

    </RelativeLayout>    
<TextView
    android:id="@+id/t_line"
    android:layout_height="1px"
    android:layout_width="fill_parent"
    android:layout_below="@id/r_re"
    android:layout_marginTop="10dp"
    android:background="#bfbfbf"
    />  
     <com.example.ifamily.mywidget.TextViewNameList
        android:id="@+id/namelist"
        android:layout_below="@id/t_line"
        android:layout_width="fill_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        ></com.example.ifamily.mywidget.TextViewNameList>

<TextView
    android:id="@+id/t_line2"
    android:layout_height="1px"
    android:layout_width="fill_parent"
    android:layout_below="@id/namelist"
    android:layout_marginTop="10dp"
    android:background="#bfbfbf"
    />  
    </RelativeLayout>
   
</LinearLayout>
