<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
     >
    <RelativeLayout 
        android:id="@+id/allitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"     
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/halftrancornerview"
        >
       
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/o_old_item_ll"  
            android:layout_below="@id/ltime" 
            android:gravity="center_vertical"         
        >

<com.example.ifamily.mywidget.RoundImageView
    android:id="@+id/head"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
    android:layout_alignParentLeft="true"
    android:src="@drawable/defalt_head" />
<RelativeLayout
    android:id="@+id/re_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/head"
    >
            <RelativeLayout
        android:id="@+id/rrr"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
            <com.example.ifamily.mywidget.TextViewM
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_marginLeft="10dp"
                android:maxLength="10"
                android:singleLine="true"
                android:text="ddddddddddddddddddddddddddddddddddddd"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/addtext"
                android:layout_toRightOf="@id/name"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="right"
                android:textColor="@color/purple"
                android:text="2008 7/29 " />

            </RelativeLayout>
                        <RelativeLayout
        android:id="@+id/rrr1"
        android:layout_below="@id/rrr"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >


            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/cornerview"
                android:padding="5dp"
                android:text="已送出" />
                                <TextView               
                android:layout_marginTop="10dp"
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                 android:layout_alignParentLeft="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/tv_state"
                android:text="ddddddddddddddddddddddddddddddddddddd"
                android:textColor="#000000"
                android:textSize="20sp" />
                </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/re_bg"
                            android:layout_below="@id/rrr1"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" >

                            <ImageView
                                android:id="@+id/img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:adjustViewBounds="true"
                                android:maxHeight="200dp"
                                android:maxWidth="200dp"
                                android:src="@drawable/login_bg" />
                        </RelativeLayout>
    
  </RelativeLayout>
   </RelativeLayout>
   <LinearLayout
       android:layout_below="@id/o_old_item_ll"
      android:layout_height="wrap_content"
      android:layout_width="fill_parent"
      android:layout_marginRight="10dp"
      android:layout_marginLeft="10dp"
      android:gravity="right"
      android:orientation="horizontal"
    >
                <TextView
                    android:id="@+id/comnum"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="12条评论"
                    android:textColor="#000000"
                    android:layout_marginRight="10dp"
                    />
                 <ImageView
                     android:id="@+id/iv_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:layout_toRightOf="@id/iv_good"
                     android:layout_marginBottom="1dp"
                     android:background="@drawable/commentselect"
                     android:layout_marginRight="3dp"
                     android:contentDescription="@string/app_name"
                     android:focusable="true" />
</LinearLayout>
</RelativeLayout>
</LinearLayout>