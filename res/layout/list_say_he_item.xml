<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:layout_marginLeft="10dp"
  >
 
  <TextView
      android:id="@+id/say_time"
      android:layout_marginTop="10dp"
      android:layout_width="fill_parent"
      android:gravity="center"
      android:layout_height="12dp"
      android:textSize="12sp"
      android:textColor="#ffffff"
      android:text="fkdlkfdlkfldkfkfl"
      />
  <LinearLayout
      android:layout_marginTop="10dp"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >
  <LinearLayout
      android:orientation="vertical"
      android:layout_width="249dp"
      android:layout_height="wrap_content"
      android:background="@drawable/outgoing"
  >
      <TextView
          android:id="@+id/messagedetail_row_text"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:paddingLeft="2dp"
          android:textColor="#0000DD"
          android:textSize="16sp"
      />
  </LinearLayout>
  <RelativeLayout 
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"      
      >
  <com.example.ifamily.mywidget.RoundImageView
      android:layout_width="35dp"
      android:layout_height="35dp"
      android:layout_gravity="top"
      android:id="@+id/sayhead"
     
      
  />
  <TextView 
      android:layout_below="@id/sayhead"
      android:id="@+id/sayname"
      android:layout_height="15dp"
      android:layout_width="wrap_content"
      android:maxLength="10"
      android:singleLine="true"
      android:text="llllllllllllll"
      android:maxWidth="35dp"
      />
  </RelativeLayout></LinearLayout>
</LinearLayout>
