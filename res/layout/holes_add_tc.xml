<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/all"
    android:orientation="vertical" >
          <include layout="@layout/p_title"/>
   <LinearLayout 
     android:id="@+id/wish"
     android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:orientation="vertical"
     android:paddingTop="5dp"
     android:paddingBottom="5dp"
      >   

    <EditText
    android:id="@+id/wishes"
    android:layout_marginTop="10dip"
    android:layout_width = "fill_parent"
    android:layout_height = "170dip"
    android:layout_marginLeft = "10dip"
     android:layout_marginRight = "10dip"
    android:hint="快点吐槽吧"
    android:background="@drawable/editboder"
    android:gravity="top"
    android:textSize="18sp"
    android:maxLength="200"
    >
    
</EditText>
  
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    >
<TextView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:text="是否匿名"
    android:textColor="#000000"
    />
    <com.example.ifamily.mywidget.SwitchButton
        android:id="@+id/cb_niming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        />   
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            >
<Button
   android:id="@+id/wish_ok"
   android:layout_height="40dp"
   android:layout_width="wrap_content"  
   android:paddingLeft="10dp"
   android:paddingRight="10dp"
   android:gravity="center"
   android:text="发表"
   android:layout_marginRight="10dp"
   android:textColor="@color/purple"
   android:background="@drawable/commenbutton"
    />
</LinearLayout> 
</LinearLayout>

     </LinearLayout> 
</LinearLayout>
