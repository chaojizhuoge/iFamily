<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/all"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:id="@+id/allitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"     
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/halftrancornerview"
        >
        
        
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/o_old_item_ll"  
            android:gravity="center_vertical"         
        >

<com.example.ifamily.mywidget.RoundImageView
    android:id="@+id/head"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
    android:layout_alignParentLeft="true"
    android:src="@drawable/defalt_head" />
<RelativeLayout
    android:id="@+id/re_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/head"
    >
    <RelativeLayout
        android:id="@+id/rrr"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
            <com.example.ifamily.mywidget.TextViewM
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="dddddd"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/time"
                android:layout_toRightOf="@id/name"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="right"
                android:textColor="@color/purple"
                android:text="2008 7/29 " />

            </RelativeLayout>
      <RelativeLayout
        android:id="@+id/rrr1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/rrr"
    >
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:text="ddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddd"
                android:textColor="#000000"
                android:textSize="15sp" />

                   </RelativeLayout> 
                </RelativeLayout>    
                <ImageView
                    android:layout_below="@id/re_text"
          android:id="@+id/img"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:maxWidth="200dp"
          android:maxHeight="200dp"
          android:adjustViewBounds="true"  
          android:layout_marginLeft="50dp"
          android:layout_marginRight="10dp"
          android:layout_marginTop="5dp"/>
  </RelativeLayout>
        
        <LinearLayout
       android:layout_below="@id/o_old_item_ll"
      android:layout_height="wrap_content"
      android:layout_width="fill_parent"
      android:layout_marginRight="10dp"
      android:layout_marginLeft="10dp"
      android:gravity="right"
      android:orientation="horizontal"
    >
                <TextView
                    android:id="@+id/comnum"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="12条评论"
                    android:textColor="#000000"
                    android:layout_marginRight="10dp"
                    />
                 <ImageView
                     android:id="@+id/iv_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:layout_marginBottom="1dp"
                     android:background="@drawable/commentselect"
                     android:layout_marginRight="3dp"
                     android:contentDescription="@string/app_name"
                     android:focusable="false" />
</LinearLayout>
        
    </RelativeLayout>
</LinearLayout>
