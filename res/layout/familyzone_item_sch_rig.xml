<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="8.0dip"
    android:paddingRight="9.0dip"
    android:paddingTop="10.0dip" >

    <RelativeLayout
        android:id="@+id/familyzone_item_sch_mes"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29.0dip"
        android:background="@drawable/thought_bubble" >

        
        <TextView
            android:layout_below="@id/addtext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:gravity="right"
            android:id="@+id/time"
            />
        
        <TextView
            android:layout_below="@id/time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:id="@+id/attime"
            android:gravity="left"
            />
                <TextView
            android:layout_below="@id/attime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:id="@+id/noo"
            android:text="同行的人："
            android:gravity="left"
            />
        <LinearLayout 
            android:layout_below="@id/noo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:id="@+id/friends"
            ></LinearLayout>
       <TextView
           android:layout_below="@id/friends"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:id="@+id/atplace"
            android:gravity="left"
            />

        <TextView
            android:layout_below="@id/atplace"
            android:id="@+id/familyzone_sch_main"
            style="@style/feed_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"            
            android:gravity="center_vertical"
            android:minHeight="40.0dip"
            android:paddingBottom="4.0dip"
            android:paddingLeft="8.0dip"
            android:paddingRight="6.0dip"
            android:paddingTop="4.0dip" />

        <LinearLayout
            android:id="@+id/familyzone_be"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/familyzone_sch_main"
            android:orientation="vertical"
            android:visibility="visible" >

            <RelativeLayout 
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:gravity="right"
                
                
>
 

                 <TextView
                    android:id="@+id/num"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="12个赞"
                    android:textColor="#000000"
                    android:layout_marginRight="10dp"
                    />
                                    
                <ImageView
                    android:id="@+id/zan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="fitCenter"   
                    android:layout_toRightOf="@id/num"               
                    android:background="@drawable/likeselect"
                    android:contentDescription="@string/app_name"
                    android:focusable="true" />
           </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>