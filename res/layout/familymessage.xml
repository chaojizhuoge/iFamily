<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:id="@+id/familymessage"
    android:orientation="vertical" >
    
<include
    layout="@layout/p_title" />

<ScrollView
    android:id="@+id/sc"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:scrollbars="none"
    
    >
    <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
        >

<LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:background="#ffffff"
               >  
    
         <com.example.ifamily.mywidget.RoundImageView
           android:id="@+id/iv_pri_img"
           android:layout_width="80dp"
           android:layout_height="80dp"
           android:layout_marginLeft="10dp"
           android:src="@drawable/jia"
           />    
           <LinearLayout 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               >
               <TextView 
                   android:id="@+id/group_name"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:singleLine="true"
                   android:text="林家大湾"
                   android:textSize="20sp"
                   android:layout_marginTop="5dp"
                   android:layout_marginLeft="5dp"
                   android:textColor="#000000"

                   />
              <TextView 
                   android:id="@+id/group_num"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:singleLine="true"
                   android:layout_marginTop="20dp"
                   android:text="账号:1234567"
                   android:textSize="15sp"
                   android:layout_marginLeft="5dp"
                   android:textColor="#000000"

                   />
           </LinearLayout> 

</LinearLayout>
<LinearLayout
                    android:id="@+id/re_birth"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/common_strip_setting_top"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical" >

                    <TextView    
                                                 
                        android:layout_height="wrap_content"
                        android:layout_width="40dp"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"           
                        android:text="建团时间"                     
                        />
                    <TextView    
                         android:id="@+id/tv_p_birth"                       
                        android:layout_height="wrap_content"
                        android:layout_width="40dp"
                        android:textColor="#000000"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:text="2014年7月8日" />
                </LinearLayout>
<LinearLayout
                    android:id="@+id/re_back"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/common_strip_setting_top"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical" >

                    <TextView    
                                                 
                        android:layout_height="wrap_content"
                        android:layout_width="40dp"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"           
                        android:text="更换聊天背景"                     
                        />
                   

                    <TextView            
                        android:layout_weight="3"     
                        android:layout_height="wrap_content"
                        android:layout_width="20dp"
                        android:gravity="center_vertical"
                        android:drawableRight="@drawable/arrow_right_gray_white"
                        android:paddingRight="8dp" />
                </LinearLayout>

<LinearLayout
                    android:id="@+id/group_detail"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/common_strip_setting_top"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical" >

                    <TextView    
                                                       
                        android:layout_height="fill_parent"
                        android:layout_width="40dp"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"           
                        android:text="团简介"                     
                        />
                    <TextView              
                         android:id="@+id/tv_p_deteil"      
                        android:layout_height="wrap_content"
                        android:layout_width="40dp"
                        android:textColor="#000000"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:maxLines="3"
                        android:ellipsize="end"
                        android:text="我们是相亲相爱的一家人！" />

                    <TextView            
                        android:layout_weight="3"     
                        android:layout_height="wrap_content"
                        android:layout_width="20dp"
                        android:gravity="center_vertical"
                        android:drawableRight="@drawable/arrow_right_gray_white"
                        android:paddingRight="8dp" />
                </LinearLayout>
<LinearLayout 
    
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
               >  
               <TextView
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="20dp"
                   android:text="成员"
                   
                   />
               <RelativeLayout 
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content"                  
                   >
<GridView
android:id = "@+id/relatives"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_marginLeft="10dp"
android:numColumns="2"
android:verticalSpacing="10dip"
android:horizontalSpacing="10dip"
android:listSelector="#00000000"  
android:drawSelectorOnTop = "false"
></GridView>

<RelativeLayout
    android:id="@+id/reee"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_marginLeft="14dp"
    android:layout_marginTop="29dp" >
<ImageView
    android:id="@+id/tishi"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/tishi5" />

<TextView
    android:id="@+id/iknow"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/tishi"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="42dp"
    android:background="@drawable/tranbutton"
    android:padding="3dp"
    android:layout_marginBottom="3dp"
    android:textColor="@color/purple"
    android:text="我知道了" />

</RelativeLayout>


    </RelativeLayout>
               </LinearLayout>
          <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/common_strip_setting_middle"
                    android:clickable="true"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                     android:id="@+id/addfriend"
                     >

                    <TextView
                      
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:duplicateParentState="true"
                        android:padding="8dp"
                        android:text="邀请好友" />
                </RelativeLayout>     




<RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/common_strip_setting_middle"
                    android:clickable="true"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                     android:id="@+id/quit"
                     >

                    <TextView
                      
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:duplicateParentState="true"
                        android:padding="8dp"
                        android:text="退出家庭" />
                </RelativeLayout>
                </LinearLayout>
                </ScrollView>
</LinearLayout>
