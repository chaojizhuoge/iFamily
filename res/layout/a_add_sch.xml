<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/all"
        android:background="#eee"
    android:orientation="vertical" >
    <include
     android:layout_height="wrap_content"
     layout="@layout/p_title" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
<Button 
    android:id="@+id/a_add_sch_seldate"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
    android:text="请选择日期"
    android:background="@drawable/cornerview"
    />
</LinearLayout>
  <LinearLayout
      android:layout_marginTop="10dp"
      android:id="@+id/a_add_spinner"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:gravity="center"
                android:background="@drawable/cornerview"
         android:orientation="horizontal"
        >
        
<TextView 
    android:id="@+id/a_add_sch_selfriend"
    android:layout_marginLeft="20dp"
    android:layout_width="wrap_content"
    android:layout_height="20dp"
    android:textSize="15sp"
    android:textColor="#000000"
    android:text="请选择一起的小伙伴"
    />
</LinearLayout>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
     >
    </LinearLayout>
    
<EditText 
    android:id="@+id/atplace"
    android:layout_width="fill_parent"
    android:hint="请输入目的地"
    android:paddingLeft="5dp"
    android:layout_height="30dp"
    android:textColor="#000000"
    android:layout_marginTop="10dp"
     android:background="@drawable/cornerview"
     android:layout_marginLeft="20dp"
     android:layout_marginRight="20dp"
    />
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <EditText
        android:id="@+id/a_add_sch_et"
        android:layout_width="0dp"
        android:layout_height="138dp"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:layout_weight="0.85"
        android:gravity="top"
        android:background="@drawable/editboder"
        android:hint="请输入要发表的信息"
        android:textSize="18sp" >
    </EditText>
</LinearLayout>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
  android:gravity="right"
     >
    <Button 
        android:layout_marginTop="10dp"
        android:id="@+id/a_add_sch_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
            android:textColor="@color/purple"
   android:background="@drawable/commenbutton"
           android:text="提交"
        android:layout_marginRight="20dp"
        />
    </LinearLayout>
</LinearLayout>
