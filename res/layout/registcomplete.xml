<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8f0f0"
    android:id="@+id/all"
    android:orientation="vertical" >

    <include layout="@layout/p_title" />
    
    <LinearLayout
            android:id="@+id/linearLayout01"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" 
            android:orientation="vertical">
            
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:baselineAligned="false" 
                android:orientation="horizontal">
                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0">
                    <TextView  android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="手机验证" android:textSize="15sp"  android:drawableRight="@drawable/regist_bound_img"/>
                  
                </LinearLayout>
                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="密码设置" android:textSize="15sp"  android:drawableRight="@drawable/regist_bound_img"/>
                 
                </LinearLayout>
                
                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawableRight="@drawable/regist_bound_img" 
                        android:text="完成注册" 
                        android:textColor="#000000"
                        android:textSize="15sp"/>
                   
                </LinearLayout>
            </LinearLayout>
              
                
                
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp" 
                android:background="@drawable/prefresh_list_cutline"/>
            
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
               >  
    
         <com.example.ifamily.mywidget.RoundImageView
           android:id="@+id/head"
           android:layout_width="80dp"
           android:layout_height="80dp"
           android:layout_marginLeft="10dp"
           android:src="@drawable/defalt_head"
           />   

    <Button
    android:id="@+id/selpic"
    android:layout_marginTop="40dp"
    android:layout_marginLeft="50dp"
    android:layout_height="40dp" 
    android:layout_width="120dp"
    android:text="请选择头像"
        android:background="@drawable/commenbutton"
    android:textColor="@color/purple"

    />     

</LinearLayout>
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/common_strip_setting_top" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:contentDescription="@string/app_name"
                    android:text=" 昵称"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="22dp"
                    android:layout_weight="0.71"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:hint="请输入昵称"
                    android:textSize="15sp" />
            </LinearLayout>
            
              <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/common_strip_setting_top"
                android:id="@+id/ll_selsex"
                android:gravity="center_vertical"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp">
                <TextView android:layout_width="wrap_content" 
                    android:contentDescription="@string/app_name" 
                    android:layout_height="wrap_content" 
                    android:layout_gravity="center"
                     android:text="性别" 
                     android:layout_marginLeft="16dp"
                      android:textColor="#000000" 
                      android:textSize="15sp"/>
                
                
                
                <TextView 
                    
                    android:layout_width="wrap_content"
                    android:id="@+id/sex"
                    android:contentDescription="@string/app_name" 
                    android:layout_height="wrap_content" 
                    android:layout_gravity="center" 
                    android:text="请选择性别" 
                    android:layout_marginLeft="16dp"  
                   android:textSize="15sp"/>
                <TextView
             android:layout_width="20dp"
             android:layout_height="wrap_content"
             android:layout_weight="3"
             android:drawableRight="@drawable/arrow_right_gray_white"
             android:gravity="center_vertical"
             android:paddingRight="8dp" />
            </LinearLayout>
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:id="@+id/ll_selbirth"
                android:gravity="center_vertical"
                android:background="@drawable/common_strip_setting_top"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp">
                <TextView android:layout_width="wrap_content" 
                    android:contentDescription="@string/app_name" 
                    android:layout_height="wrap_content" 
                    android:layout_gravity="center" 
                    android:text="生日" 
                    android:layout_marginLeft="16dp" 
                    android:textColor="#000000" android:textSize="15sp"/>
                <TextView android:layout_width="wrap_content"
                    android:id="@+id/birth"
                     android:contentDescription="@string/app_name" 
                     android:layout_height="wrap_content" 
                     android:layout_gravity="center" 
                     android:text="请选择生日" 
                     android:layout_marginLeft="16dp"  android:textSize="15sp"/>
                <TextView
             android:layout_width="20dp"
             android:layout_height="wrap_content"
             android:layout_weight="3"
             android:drawableRight="@drawable/arrow_right_gray_white"
             android:gravity="center_vertical"
             android:paddingRight="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/common_strip_setting_top" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:contentDescription="@string/app_name"
                    android:text="个人简介"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/detail"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="22dp"
                    android:layout_weight="0.63"
                    android:background="@null"
                    android:hint="请输入个人简介"
                    android:layout_marginRight="10dp"
                    android:textSize="15sp" />
            </LinearLayout>

            <Button android:id="@+id/ok" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="提交" android:background="@drawable/register_button_select" android:layout_marginTop="10dp" android:layout_marginLeft="22dp" android:layout_marginRight="22dp"/>
     </LinearLayout>

</LinearLayout>